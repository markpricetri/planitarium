<div class="container mb3">
  <% if current_user.admin %>
    <div class="table-container">
      <table class="table">
        <thead>
          <tr><h2>All Reviews (Admin View)</h2></tr>
          <tr>
            <th scope="col">Review ID</th>
            <th scope="col">Show Reviewed</th>
            <th scope="col">Review Content</th>
          </tr>
        </thead>
        <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.id %></td>
            <td><%= review.show.name %></td>
            <td><%= review.content %></td>
            <td><%= link_to "ðŸ—‘", review_path(review.id), method: "delete" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p><strong>Admins Only!</strong></p>
  <% end %>
</div>
