<h1><%= @show.name %></h1>

<h3>
  Start Time - <%= @show.start_time %>
  Duration - 1 Hour
</h3>

<p>Capacity - <%= @show.capacity %> </p>

<%= cl_image_tag @show.photo.key %>

 <div class="list-group">
        <% @show.reviews.each do |review| %>
          <li class="list-group-item">
            <small>
              <% count = 0 %>
              <% 5.times do %>
                <% if review.rating > count %>
                  <i class="fas fa-star"></i>
                <% else %>
                  <i class="far fa-star"></i>
                <% end %>
                <% count += 1 %>
              <% end %>
            </small>
            <p><%= review.content %></p>
          </li>
        <% end %>
      </div>


      <%= simple_form_for [@show, @review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content%>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "See all shows", shows_path %>

<%= link_to "Back", shows_path %>
