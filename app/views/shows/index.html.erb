<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @shows.each do |show| %>
      <% if Show.first == show %>
        <div class="carousel-item active">
          <%= cl_image_tag show.photo.key, class: "d-block w-100" %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%= show.name %></h5>
            <p>Start time - <%= time_formatter(show.start_time) %> | Duration - 1 hour</p>
          </div>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= cl_image_tag show.photo.key, class: "d-block w-100" %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%= show.name %></h5>
            <p>Start time - <%= time_formatter(show.start_time) %> | Duration - 1 hour</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="row">
    <% @shows.each do |show| %>
      <div class="col-4">
        <%= link_to show_path(show) do %>
          <div class="card" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path show.photo.key %>'); background-size: cover;">
            <div class="card-body">
              <h4 class="card-title"><%= show.name %></h4>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
