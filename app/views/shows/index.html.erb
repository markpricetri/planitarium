<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @shows.each do |show| %>
      <% if Show.first == show %>
        <div class="carousel-item active" style="background-image: linear-gradient(rgba(255,255,255,0), rgba(255,255,255,0.7)), url('<%= cl_image_path show.photo.key %>')">
          <%= link_to show_path(show) do %>
            <div class="carousel-caption d-none d-md-block">
              <h3><%= show.name %></h3>
              <p>Start time - <%= time_formatter(show.start_time) %> | Duration - 1 hour</p>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="carousel-item" style="background-image: linear-gradient(rgba(255,255,255,0), rgba(255,255,255,0.7)), url('<%= cl_image_path show.photo.key %>')">
          <%= link_to show_path(show) do %>
            <div class="carousel-caption d-none d-md-block">
              <h3><%= show.name %></h3>
              <p>Start time - <%= time_formatter(show.start_time) %> | Duration - 1 hour</p>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="cards">
    <% @shows.each do |show| %>
      <%= link_to show_path(show) do %>
        <div class="card" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path show.photo.key %>')">
          <div class="card-body">
            <h4 class="card-title"><%= show.name %></h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
