<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @shows.each do |show| %>
      <% if Show.first == show %>
        <div class="carousel-item active" style="background-image: linear-gradient(to bottom, rgba(68,71,72,0.4), rgba(68,71,72,0.9)), url('<%= cl_image_path show.photo.key %>')">
          <%= link_to show_path(show) do %>
            <div class="carousel-caption d-none d-md-block">
              <p class="text-light"><%= show.name %></p>
              <p class="text-light">Start time - PUT IT IN HERE | Duration - 1 hour</p>
              <div class="big-button"><%= link_to "Book Now", show_path(show) %></div>
            </div>
          <% end %>
        </div>
      <% else %>

        <div class="carousel-item" style="background-image: linear-gradient(to bottom, rgba(68,71,72,0.4), rgba(68,71,72,0.9)), url('<%= cl_image_path show.photo.key %>')">
          <%= link_to show_path(show) do %>
            <div class="carousel-caption d-none d-md-block">
              <p class="text-light"><%= show.name %></p>
              <p class="text-light">PUT IT IN HERE - </p>
              <div class="big-button"><%= link_to "Book Now", show_path(show) %></div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="cards">
    <% @shows.each do |show| %>
      <div class="card">
        <%= link_to show_path(show) do %>
        <div class="card-image" style="background-image: linear-gradient(to bottom, rgba(68,71,72,0.4), rgba(68,71,72,0.8)), url('<%= cl_image_path show.photo.key %>')">
        </div>
      <% end %>
        <div class="card-content">
          <%= link_to show_path(show) do %>
            <h3><%= show.name %></h3>
          <% end %>
          <div class="show-details">
            <div class="show-time">
              <p>Start time: PUT IN HERE</p>
            </div>
            <p class="show-availability"><%= remaining_seats(show) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="big-button">Book Now</div>