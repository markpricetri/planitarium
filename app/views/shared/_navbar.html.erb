<div class="navbar navbar-expand-sm navbar-light navbar">
  <div>
    <%= image_tag 'logo.png', id: 'nav-logo'%>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Home', root_path %>
      </li>

      <!-- branch if user is signed in, where a dropdown is available to view profile and bookings -->
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" ><%= current_user.first_name %></a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <!-- TODO add my bookings link in place of root path -->
            <%= link_to 'My Bookings', root_path, class: 'dropdown-item' %>
            <%= link_to 'My Account', edit_user_registration, class: 'dropdown-item' %>
          </div>
        </li>
      <!-- branch if user is not signed in -->
      <% else %>
        <li class="nav-item">
          <%= link_to 'Login', new_user_session_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign-up', new_user_registration_path %>
        </li>
      <% end %>

    </ul>
  </div>
</div>
